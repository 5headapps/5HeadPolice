{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "es6",
        "noImplicitAny": false,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "../dist/server/",
        "baseUrl": ".",
        "paths": {
            "*": [
                "node_modules/@types/*",
            ]
        },
        "typeRoots": [
            "node_modules/@types"
        ],
        "strictNullChecks": true,
        "noImplicitThis": true,
        "alwaysStrict": true
    },
    "include": [
        "src/**/*",
    ],
    "exclude": [
        "node_modules"
    ]
}